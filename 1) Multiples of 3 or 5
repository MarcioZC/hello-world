public class HideAndSeek {
  public static void main(String[] args) {
    int n1 = 3;
    int valor1;
    String separador = "";
    int suma = 0;

    
    for (int i = 1; i<10; i++){
    valor1 = i/n1;
    
    // 1 = 3/3
    // 2 = 6/3

    if (i % n1 == 0) { 
        
    suma += i;   


    System.out.print(separador + "i= " + i);
    separador = ", ";
    }
    
  }
  
    System.out.println("\nsuma= "+suma);

}
}
